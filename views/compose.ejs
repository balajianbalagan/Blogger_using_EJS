<%- include("partials/header") -%>
<div id="wrap">
  <div id="main" class="container clear-top">
<h1>Compose</h1>
<div>
  <form action="/compose" method="post">

    <label for="postTitle" class="form-label">Title</label>
    <div class="mb-3 text-center">
      <textarea class="form-control" id="postTitle" rows="1" name="postTitle"></textarea>
    </div>

    <label for="postBody" class="form-label">Post</label>
    <div class="mb-3 text-center">
      <textarea class="form-control" id="postBody" rows="4" name="postBody"></textarea>
    </div>

  <div class="text-left">
    <button type="submit" name="submit" class="btn-lg btn-success">Publish</button>
  </div>
  </form>
</div>
</div>
</div>
<%- include("partials/footer") -%>
